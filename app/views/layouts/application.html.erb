
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UFT-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>ILIKE4U</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <script src="https://cdn.jsdelivr.net/npm/timezz/dist/timezz.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-tubolinks-track': 'reload' %>
    <%#= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->
  </head>

  <body class="text-center">
    <%= render 'shared/navbar' %>
    <div class="cover-container h-100 p-3 mx-auto flex-column" style="background-image: url(<%= asset_path 'background.jpg' %>); background-size: cover;">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

        <%= yield %>

      <%= render 'shared/footer' %>
      <%= javascript_include_tag 'application', 'data-tubolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application' %>
    </div>
  </body>
</html>
